{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table basic-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ formation.specialite }}</td>
            </tr>
            <tr>
                <th>Certification</th>
                <td>{{ formation.certification }}</td>
            </tr>
            <tr>
                <th>Option</th>
                <td>{{ (formation.options is not null) ? formation.options.nomOption : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row-block">
        <a class="btn btn-primary" href="{{ path('app_formation_index') }}">Liste</a>
        <a class="btn btn-primary" href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
        {{ include('formation/_delete_form.html.twig') }}
    </div>
{% endblock %}
