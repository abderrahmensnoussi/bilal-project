                <th>Signature</th>
            </tr>
        </thead>
        <tbody>
        {% for emergerField in form.emargers %}
        <tr>
            <td>{{ emergerField.vars.value.utilisateur.nomNaissance }}</td>
            <td>{{ emergerField.vars.value.utilisateur.prenom }}</td>
            <td>
                {{ form_errors(emergerField.presence) }}
