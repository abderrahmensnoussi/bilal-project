{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h1>Promotion Liste</h1>

    <table class="table basic-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Annee</th>
                <th>Formation</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.nom }}</td>
                <td>{{ promotion.annee }}</td>
                <td>{% if promotion.formation is not null %}{{ promotion.formation.specialite }}{{ (promotion.formation.options is not null) ? ' - ' ~ promotion.formation.options.nomOption : '' }}{% endif %}</td>
                <td>{{ promotion.dateDebut ? promotion.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.dateFin ? promotion.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_promotion_show', {'id': promotion.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row-block">
        <a class="btn btn-primary" href="{{ path('app_promotion_new') }}">Créer Promotion</a>
    </div>
{% endblock %}
